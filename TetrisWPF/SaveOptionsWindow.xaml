        <TextBox x:Name="Database" Grid.Column="1" Width="130" Height="25" Margin="10,0,0,0" FontSize="12" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Left">TetrisBase</TextBox>
        <TextBox x:Name="Login" Grid.Column="1" Width="130" Height="25" Margin="10,0,0,0" FontSize="12" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Left">user2</TextBox>
        <PasswordBox x:Name="Pass" Grid.Column="1" Width="130" Height="25" Margin="10,0,0,0" FontSize="12" Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Left" Password="ctvtqrf55556"></PasswordBox>
        <Button Grid.Column="0" Grid.Row="5" Grid.ColumnSpan="2" Width="80" Height="25" Content="Apply" Click="ApplyButton_OnClick"></Button>
